        write(board2[6][6], 70, 'black', 415, 480)
    if board2[6][7] != None:
        write(board2[6][7], 70, 'black', 485, 480)
    if board2[6][8] != None:
        write(board2[6][8], 70, 'black', 550, 480)
    if board2[7][0] != None:

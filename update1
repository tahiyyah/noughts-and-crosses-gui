def home():
    while True:
        #draw to screen
        screen.fill('pink')
        write('now updated with noughts and crosses extra!', 35, 'black', 12, 10)

        normal_mode = Button(225, 280, 150, 40, board_colour, board_colour2, True) #creating buttons
        write('normal', 30, 'black', 260, 280)
        extra_mode = Button(225, 350, 150, 40, board_colour, board_colour2, True)
        write('extra', 30, 'black', 270, 350)

        for event in pygame.event.get():
            if event.type == MOUSEBUTTONDOWN:
                if normal_mode.clicked():
                    normal()
                if extra_mode.clicked():
                    extra()
            if event.type == pygame.QUIT: #checks if the 'x' button is pressed
                pygame.quit()

        pygame.display.update()
home()

pygame.quit()
